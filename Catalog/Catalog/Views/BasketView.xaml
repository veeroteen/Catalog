<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Catalog.Views.BasketView"
             xmlns:model="clr-namespace:Catalog.Models"
             xmlns:local="clr-namespace:Catalog.ViewModels"
             Title="Корзина">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="0,10" CornerRadius="0">
                <SearchBar Placeholder=""  />
            </Frame>
            <ContentView x:DataType="local:BasketViewModel">
                <CollectionView x:Name="ItemsListView"
                ItemsSource="{Static local:BasketViewModel.BasketItemList}"
                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid BackgroundColor="Black">
                            <Grid Margin="1,1,1,1" Padding="0" x:DataType="model:ItemsInBasket" BackgroundColor="LightGray">
                                <Label 
                                    Text="{Binding Text}" 
                                    LineBreakMode="NoWrap" 
                                    Style="{DynamicResource ListItemTextStyle}" 
                                    FontSize="16"
                                    Margin="5,0"/>
                                <Label 
                                    Text="{Binding Description}" 
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemDetailTextStyle}"
                                    FontSize="13"
                                    Margin="100,30"/>
                                <Label 
                                    Text="{Binding Count}" 
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemDetailTextStyle}"
                                    FontSize="13"
                                    HorizontalOptions="End"
                                    Margin="0,0,15,10"/>
                                <Image 
                                    Source="{Binding Img}"  
                                    Margin="10,25,0,1" 
                                    VerticalOptions="Start" 
                                    HorizontalOptions="Start" 
                                    WidthRequest="72" 
                                    HeightRequest="72" 
                                    BackgroundColor="LightGray" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        NumberOfTapsRequired="1"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:BasketViewModel}}, Path=ItemTapped}"		
                                        CommandParameter="{Binding .}">
                                    </TapGestureRecognizer>
                                </Grid.GestureRecognizers>
                            </Grid>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ContentView>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>