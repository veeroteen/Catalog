<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Catalog.Views.Register"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <Grid>
            <Label Text="Register" FontSize="20" TextColor="Black" HorizontalOptions="Center" Margin="0,20"/>
            <Entry x:Name="LoginE" Placeholder="Login" VerticalOptions="Start"  Margin="8,60,8,0"/>
            <Entry x:Name="PasswordE" Placeholder="Password" VerticalOptions="Start"  Margin="8,100,8,0"/>
            <Entry x:Name="NameE" Placeholder="ФИО" VerticalOptions="Start"  Margin="8,140,8,0"/>
            <Entry x:Name="PhoneE" Placeholder="Мобильный номер" VerticalOptions="Start"  Margin="8,180,8,0"/>
            <Button Text="Register"    Margin="0,150" Clicked="RegisterClick" VerticalOptions="Center" HorizontalOptions="Center"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>